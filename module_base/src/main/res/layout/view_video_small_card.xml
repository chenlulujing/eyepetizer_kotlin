<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/videoCover"
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/shape_bg_duration"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:textColor="@color/cl_ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/videoCover"
        app:layout_constraintRight_toRightOf="@id/videoCover"
        tools:text="00:00" />

    <TextView
        android:id="@+id/titleBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/cl_000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/videoCover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/videoCover"
        tools:text="标题标题标题标题标题标题标题标题标题标题标题标题" />

    <TextView
        android:id="@+id/category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/cl_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/videoCover"
        app:layout_constraintLeft_toLeftOf="@id/titleBar"
        app:layout_constraintLeft_toRightOf="@id/videoCover"
        tools:text="旅行/开眼精选" />

</androidx.constraintlayout.widget.ConstraintLayout>